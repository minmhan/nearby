extends layout

block content
    .row.page-header
        .col-lg-12
            h1= pageHeader.title

        .row
            .col-xs-12.col-md-6
                form.form-horizontal(action="", method="POST", role="form")
                    - if(error == "val")
                        .alert.alert-danger(role="alert") All fields required, please try again
                    .form-group
                        label.col-xs-10.col-sm-2.control-label(for="name") Name
                        .col-xs-12.col-sm-10
                            input#name.form-control(name="name")
                    .form-group
                        label.col-xs-10.col-sm-2.control-label(for="address") address
                        .col-xs-12.col-sm-10
                            input#address.form-control(name="address")
                    .form-group
                        label.col-xs-10.col-sm-2.control-label(for="facilities") facilities
                        .col-xs-12.col-sm-10
                            input#facilities.form-control(name="facilities")
                    .form-group
                        label.col-xs-10.col-sm-2.control-label(for="coords") Coordinates
                        .col-xs-12.col-sm-10
                            input#coords.form-control(name="coords")
                    .form-group
                        label.col-sm-2.control-label(for="openingTimes") Opening Times
                        .col-sm-10
                            textarea#review.form-control(name="openingTimes", rows="2")
                    button.btn.btn-default.pull-right Add New Location
            .col-xs-12.col-md-4